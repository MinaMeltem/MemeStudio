<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#615f5f"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/upper_button_set_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/from_gallery_bt"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/gallery"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:background="@drawable/border_xml"/>

        <Button
            android:id="@+id/from_camera_bt"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/camera"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:background="@drawable/border_xml" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/color_buttons_container_ll"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:padding="3dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.35">

        <Button
            android:id="@+id/color_green_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:background="#379405"/>

        <Button
            android:id="@+id/color_red_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:background="#b32c03"/>

        <Button
            android:id="@+id/color_blue_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:background="#4281ec"/>

        <Button
            android:id="@+id/color_yellow_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:background="#ffee03"/>

        <Button
            android:id="@+id/stroke_thick_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:background="#ffffff" />

        <Button
            android:id="@+id/stroke_thin_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:background="#ffffff"/>
        <Button
            android:id="@+id/save_bt"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#ff4000"/>

    </LinearLayout>


    <com.example.queenabergen.memestudio.DrawOnMeme
        android:id="@+id/chosen_image_iv"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:padding="3sp"
        android:background="#ffffff"
        tools:layout_height="350dp"/>

</LinearLayout>

