<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/upper_button_set_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="65dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/from_gallery_bt"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/gallery"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:background="@drawable/border_xml"/>

        <Button
            android:id="@+id/from_camera_bt"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/camera"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/border_xml" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/left_panel"
            android:layout_width="70dp"
            android:layout_height="235dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="3dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/border_left_container"
            android:elevation="3dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp">

                <ImageButton
                    android:id="@+id/stroke_thin_button"
                    android:layout_width="30dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/border_thin"
                    android:src="@drawable/ic_gesture_black_24dp"/>

                <ImageButton
                    android:id="@+id/stroke_thick_button"
                    android:layout_width="30dp"
                    android:layout_height="32dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/border_thick"
                    android:src="@drawable/ic_brush_black_24dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp">

                <ImageButton
                    android:id="@+id/undo_button"
                    android:layout_width="30dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/border_thin"
                    android:src="@drawable/ic_undo_black_24dp" />

                <Button
                    android:id="@+id/color_black_button"
                    android:layout_width="30dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/border_black" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp">
                <Button
                    android:id="@+id/color_white_button"
                    android:layout_width="30dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/border_thick" />

                <Button
                    android:id="@+id/color_green_button"
                    android:layout_width="30dp"
                    android:layout_height="32dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/border_green" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp">

                    <Button
                        android:id="@+id/color_red_button"
                        android:layout_width="30dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/border_red" />

                    <Button
                        android:id="@+id/color_orange_button"
                        android:layout_width="30dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/border_orange"
                        android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp">

                    <Button
                        android:id="@+id/color_blue_button"
                        android:layout_width="30dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/border_blue"
                        android:layout_alignParentRight="true"/>

                    <Button
                        android:id="@+id/color_yellow_button"
                        android:layout_width="30dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/border_yellow" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp">

                <Button
                    android:id="@+id/color_pink_button"
                    android:layout_width="30dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/border_pink" />

                <Button
                    android:id="@+id/color_purple_button"
                    android:layout_width="30dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/border_purple"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>
        </LinearLayout>

        <com.example.queenabergen.memestudio.DrawOnMeme
            android:id="@+id/chosen_image_iv"
            android:layout_width="match_parent"
            android:layout_height="285dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/left_panel"
            android:layout_toRightOf="@+id/left_panel"
            android:background="@drawable/border_thick"
            android:padding="10sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/button_set_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/save_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#000000"
            android:paddingEnd="7dp"
            android:paddingRight="7dp"
            android:src="@drawable/ic_thumb_up_white_18dp" />

        <ImageButton
            android:id="@+id/share_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:background="#000000"
            android:paddingLeft="7dp"
            android:paddingStart="7dp"
            android:src="@drawable/bo_share_white_18dp" />

    </LinearLayout>

</LinearLayout>

